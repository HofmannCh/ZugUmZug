{
  "name": "train_by_train_api",
  "version": "0.1.1",
  "description": "Backend/Api server for the TrainByTrain app",
  "keywords": [],
  "author": "Lukas Hofmann",
  "license": "MIT",
  "private": true,
  "main": "./src/server.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "start": "node --inspect=3000 -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "dev": "nodemon"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-session": "^1.17.0",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mysql2": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "session-file-store": "^1.4.0",
    "ts-node": "^8.5.4",
    "uuidv4": "^6.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^13.1.2",
    "@types/session-file-store": "^1.2.1",
    "@types/validator": "^12.0.1",
    "nodemon": "^2.0.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node --inspect=3000 -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts"
  },
  "_moduleAliases": {
    "@": "src/",
    "@r": "src/routes",
    "@lib": "src/lib",
    "@if": "src/interfaces",
    "@val": "src/validations"
  }
}
